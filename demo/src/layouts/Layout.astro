---
import Sidebar from "../components/Sidebar.astro";

const { ...data } = Astro.props;
// const canonicalURL = new URL(Astro.url.pathname, Astro.site);
// const currentPage = Astro.url.pathname;
---

<html>
  <head>
    <title>
      {data.title || "Cookbook"}
    </title>
  </head>

  <body class="flex min-h-screen overflow-y-scroll bg-indigo-50">
    <div class="container mx-auto flex flex-col">
      <header class="px-4 pt-6">
        <a href="/">
          <h1 class="text-2xl font-semibold">Cookbook</h1>
        </a>
      </header>

      <div class="mb-4 flex flex-grow flex-row flex-wrap">
        <section class="w-full sm:w-1/3 md:w-1/4">
          <div class="sticky top-0 w-full p-4 pt-6">
            <Sidebar />
          </div>
        </section>

        <main role="main" class="w-full sm:w-2/3 md:w-3/4">
          <div
            class="h-full rounded-md bg-gray-50 shadow"
            style="contain: paint;"
          >
            <slot />
          </div>
        </main>
      </div>
    </div>

    <!-- <Footer path={currentFile} /> -->
  </body>
</html>
