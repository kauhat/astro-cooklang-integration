{
  "name": "astro-cooklang",
  "description": "Use Cooklang recipes within Astro",
  "version": "0.0.1-alpha1",
  "author": "Jack Fletcher",
  "license": "MIT",
  "keywords": [
    "astro-integration",
    "astro-component",
    "cooklang"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./ContentRenderer.astro": {
      "default": "./src/components/ContentRenderer.astro"
    },
    "./RecipeIngredients.astro": {
      "default": "./src/components/RecipeIngredients.astro"
    },
    "./RecipeSteps.astro": {
      "default": "./src/components/RecipeSteps.astro"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "dev": "tsc -w",
    "prebuild": "npm run clean",
    "postversion": "git push --follow-tags",
    "preversion": "npm run build",
    "test": "vitest"
  },
  "dependencies": {
    "@cooklang/cooklang-ts": "^1.2.6"
  },
  "devDependencies": {
    "astro": "4.8.6",
    "gray-matter": "^4.0.3",
    "rimraf": "^5.0.7",
    "rollup": "^4.17.2",
    "vite": "^5.2.11",
    "vitest": "^1.6.0",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "astro": "^2.2.0"
  }
}
