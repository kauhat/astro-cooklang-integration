{
  "name": "astro-cooklang",
  "description": "Use Cooklang recipes within Astro",
  "version": "0.0.1-alpha",
  "author": "Jack Fletcher",
  "license": "MIT",
  "keywords": [
    "astro-integration",
    "astro-component",
    "cooklang"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./Renderer.astro": {
      "default": "./src/components/Renderer.astro"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "dev": "tsc -w",
    "prebuild": "npm run clean",
    "postversion": "git push --follow-tags",
    "preversion": "npm run build",
    "test": "vitest"
  },
  "dependencies": {
    "@cooklang/cooklang-ts": "^1.2.4"
  },
  "devDependencies": {
    "astro": "2.4.3",
    "gray-matter": "^4.0.3",
    "rimraf": "^3.0.2",
    "vite": "^4.3.5",
    "vitest": "^0.30.1",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "astro": "^2.2.0"
  }
}
